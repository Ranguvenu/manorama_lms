<div class="d-flex justify-content-between mt-4">
    <div class="p-3">{{#str}} avgtimespend, block_reportdashboard {{/str}}  <b>{{pagetime}}</b></div>
    <div class="p-3">{{#str}} avgcompletion, block_reportdashboard {{/str}}  <b>{{avgpagecompletion}}%</b></div>
    <div class="p-3">{{#str}} unreadcount, block_reportdashboard {{/str}}  <b>{{unreadpagecount}}</b></div>
</div>
<div class = "reportdashboard_header mt-4">
	<div id='plotreportcontainer{{readingreportid}}' class='plotreport_dashboard_container' data-reportid={{readingreportid}}
            data-reporttype={{readingtype}} data-blockinstance={{readingreportid}}>
	</div>
</div>

{{#js}}
    require(['block_learnerscript/report'], function(s) {
			var params = {};
			params.reportid = {{readingreportid}};
			params.reporttype = '{{readingtype}}';
			params.instanceid = {{readingreportid}};
			params.filters = {filter_courses:{{courseid}}};
			params.reportdashboard = false;
			s.PackageReportsdata(params);
		});
{{/js}}
