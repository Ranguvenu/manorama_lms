<div class = "reportdashboard_header mt-4">
	<div id='plotreportcontainer{{practicetestreportid}}' class='plotreport_dashboard_container' data-reportid={{practicetestreportid}}
            data-reporttype={{practicetesttype}} data-blockinstance={{practicetestreportid}}>
	</div>
</div>

{{#js}}
    require(['block_learnerscript/report'], function(s) {
			var params = {};
			params.reportid = {{practicetestreportid}};
			params.reporttype = '{{practicetesttype}}';
			params.instanceid = {{practicetestreportid}};
			params.filters = {filter_courses:{{courseid}}};
			params.reportdashboard = false;
			s.PackageReportsdata(params);
		});
{{/js}}