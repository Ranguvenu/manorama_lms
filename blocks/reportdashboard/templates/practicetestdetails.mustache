<div class="d-flex justify-content-between mt-4">
    <div class="p-3">{{#str}}practicetestscount, block_reportdashboard{{/str}}  <b>{{totalpracticetests}}</b></div>
    <div class="p-3">{{#str}}unattemptpcount, block_reportdashboard{{/str}}  <b>{{unattemptedtestcount}}</b></div>
