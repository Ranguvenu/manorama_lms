<h5 class="mb-3 pl-2">{{#str}} readingreport, block_learnerscript {{/str}}</h5>
<div class="dashboardreport_card card ls-card">
	<div class = "reportdashboard_header">
        <div id='reportcontainer{{readingreportinstance}}' class='report_dashboard_container'
        data-reportid={{readingreportid}}
        data-reporttype={{readingreporttype}} data-blockinstance={{readingreportid}} >
        </div>
    </div>
</div>
{{#js}}
    require(['block_learnerscript/report'], function(s) {
		var params = {};
        params.reportid = {{readingreportid}};
        params.reporttype = '{{readingreporttype}}';
        params.instanceid = {{readingreportinstance}};
        params.filters = {filter_users:{{userid}}, filter_courses:{{courseid}}, filter_startdate:{{lsstartdate}}, filter_duedate:{{lsduedate}}};
        params.reportdashboard = false;
        s.PackageReportsdata(params);
    });
{{/js}}
