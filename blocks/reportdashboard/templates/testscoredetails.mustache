<div class = "reportdashboard_header mt-4">
	<div id='plotreportcontainer{{testscorereportid}}' class='plotreport_dashboard_container' data-reportid={{testscorereportid}}
            data-reporttype={{testscoretype}} data-blockinstance={{testscorereportid}}>
	</div>
</div>
{{>block_reportdashboard/testscores}}

{{#js}}
    require(['block_learnerscript/report'], function(s) {
			var params = {};
			params.reportid = {{testscorereportid}};
			params.reporttype = '{{testscoretype}}';
			params.instanceid = {{testscorereportid}};
			params.filters = {filter_courses:{{courseid}}};
			params.reportdashboard = false;
			s.PackageReportsdata(params);
		});
