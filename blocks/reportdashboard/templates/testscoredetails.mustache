<div class="d-flex justify-content-between mt-4">
    <div class="p-2">{{#str}}avgtestscore, block_reportdashboard{{/str}}  <b>{{avgtestscore}}</b></div>
    <div class="p-2">{{#str}}testsavailable, block_reportdashboard{{/str}}  <b>{{totaltestscores}}</b></div>
    <div class="p-2">{{#str}}unattemptedcount, block_reportdashboard{{/str}}  <b>{{unattemptedtscount}}</b></div>
