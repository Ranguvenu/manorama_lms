    }
}}
<div class="zoom_card">
	<div class="calendar_event liveclass">
        {{# inprogress}}
		<span class="live_status">Live</span>
        {{/ inprogress}}
        <div class="header_section">
            <div class="liveclassimg">
                <img src="{{config.wwwroot}}/mod/zoom/pix/video.png" class="plus">
            </div>
            <div class="header_content">
                <h5><span>Live Class</span> : <span>{{title}}</span>
                {{#hassubtopic}}
                    <small style="display: block;font-size: 12px;margin-top: 5px;margin-left: 2px;font-style: italic;">{{subtopic}} </small>
                {{/hassubtopic}}
                </h5>
                <i>{{{summary}}}</i>
            </div>
        </div>
        <div class="row calendar_event_content">

            <div class="col-md-4 date_time_content">
                <div class="text-muted mb-2">{{#userdate}} {{timestart}}, {{#str}} strftimedaydatetime, block_notification {{/str}} {{/userdate}}</div>
                <div class="text-muted mb-2">{{#userdate}} {{timestart}}, {{#str}} strftimetime12, core_langconfig {{/str}} {{/userdate}} - {{#userdate}} {{timeend}}, {{#str}} strftimetime12, core_langconfig {{/str}} {{/userdate}}</div>
            </div>
            <div class="col-md-6 d-flex align-items-center notes_lesson_content">
                <div class="row m-0 w-100 notes_lesson_info">
                    <div class="col-6 p-0 notes_content">
                        {{# classnotes}}
                        <div class="notes"><i><a href='{{classnotes}}' target="_blank">{{# str}}classnotes, mod_zoom{{/ str}}</a></i></div>
                        {{/ classnotes}}
                    </div>
                    <div class="col-6 p-0 lesson_content">
                        {{# lessonplan}}
                        <div class="lesson"><i><a href="{{lessonplan}}" target="_blank">{{# str}}lessonplan, mod_zoom{{/ str}}</a></i></div>
                        {{/ lessonplan}}
                    </div>
                </div>  
            </div>
                
            <div class="col-md-2 d-flex align-items-center justify-content-end pr-0 join_link">
            	{{{link}}}
            </div>
        </div>
    </div>
</div>
