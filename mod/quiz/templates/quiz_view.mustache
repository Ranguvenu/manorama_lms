<div class="quizpage_container shadow-lg rounded">
    <div class="quizview_page">
        <div class="header d-flex justify-content-between border-bottom p-3">
             <!---- Ramanjaneyulu commented  MU-189 starts---->
            <h5 class="mb-0">Test Details</h5>
             <!-- <h5 class="mb-0">Instructions</h5> -->
        </div>
