{{#response}}
{{#records}}
{{#goals}}
    <div class="goal_content mb-3">
        <div class="goal_header d-flex align-items-center justify-content-between py-3">
            <div><h5 data-toggle="collapse" href="#goal-{{goalid}}">{{name}}</h5>
                <span class="goalstring">Goal</span></div>
            <div class="d-flex action_btns">
                <a class="theme_text_color1 mr-3" data-action="createboard" data-goalname="{{name}}" data-goalid={{goalid}}>{{# str}}add_board, local_goals{{/ str}}</a>
                <a class="theme_text_color1 mr-1" data-action="creategoal" data-id={{goalid}} title="{{#str}} edit, local_goals {{/str}}">
                <span class="editicon text-white"><i class="fa fa-pencil fa-fw"></i></span></a>
                <a class="theme_text_color1 " data-action="deletecomponent" data-id={{goalid}} data-component ="goal"  data-name ="{{name}}"  data-code ="{{code}}"   title="{{#str}}delete,local_goals{{/str}}">
                <span class="deleteicon text-white"><i class="fa fa-trash-o" aria-hidden="true"></i></span></a>
            </div>
            
        </div>
        <div class="collapse" id="goal-{{goalid}}">
        {{#boards}}
            <div class="goal_detail_content">
                <div class="goal_board d-flex align-items-center justify-content-between py-3">
                    <div><h6 data-toggle="collapse" href="#board-{{boardid}}">{{name}}</h6>
                        <span class="heading">Board</span></div> 
                    <div class="d-flex action_btns">
                        <a class="theme_text_color1 mr-3" data-action="createclass" data-boardname="{{name}}" data-boardid={{boardid}}>{{# str}}add_class, local_goals{{/ str}}</a>
                        <a class="theme_text_color1 mr-1" data-action="createboard" data-id={{boardid}} title="{{#str}} edit, local_goals {{/str}}">
                        <span class="editicon text-white"><i class="fa fa-pencil fa-fw"></i></span></a>
                        <a class="theme_text_color1 " data-action="deletecomponent" data-id={{boardid}} data-component ="board"  data-name ="{{name}}"  data-code ="{{code}}"   title="{{#str}}delete,local_goals{{/str}}">
                        <span class="deleteicon text-white"><i class="fa fa-trash-o" aria-hidden="true"></i></span></a>
                    </div>
                </div>
                <div class="collapse" id="board-{{boardid}}">
                {{#classess}}
                    <div class="goal_class_content">
                        <div class="goal_class d-flex align-items-center justify-content-between py-3">
                            <div><h6 data-toggle="collapse" href="#class-{{classessid}}">{{name}}</h6>
                                <span class="heading">Class</span></div> 
                            <div class="d-flex action_btns">
                               <a class="theme_text_color1 mr-3" data-action="createsubject" data-classessname="{{name}}" data-classessid={{classessid}}>{{# str}}add_subject, local_goals{{/ str}}</a>
                                <a class="theme_text_color1 mr-1" data-action="createclass" data-id={{classessid}} title="{{#str}} edit, local_goals {{/str}}">
                                <span class="editicon text-white"><i class="fa fa-pencil fa-fw"></i></span></a>
                                <a class="theme_text_color1 " data-action="deletecomponent" data-id={{classessid}} 
                                data-component ="class"  data-name ="{{name}}"  data-code ="{{code}}"  title="{{#str}}delete,local_goals{{/str}}">
                                <span class="deleteicon text-white"><i class="fa fa-trash-o" aria-hidden="true"></i></span></a>
                            </div>
                        </div>   
                    </div>
                    <div class="collapse" id="class-{{classessid}}">
                    {{#subjects}}
                        <div class="goal_subject_content">
                            <div class="goal_subject d-flex align-items-center justify-content-between py-3">
                                <div><h6>{{name}}</h6>
                                    <span class="heading">Subject</span></div>     
                                <div class="d-flex action_btns">
                                    <!-- <a href="{{config.wwroot}}./subject.php?subjectid={{subjectid}}" class="theme_text_color1 mr-3" >{{# str}}view, local_goals{{/ str}}</a> -->
                                    <a class="theme_text_color1 mr-1" data-action="createsubject" data-id="{{subjectid}}" data-classessid ={{classessid}} title="{{#str}} edit, local_goals {{/str}}">
                                    <span class="editicon text-white"><i class="fa fa-pencil fa-fw"></i></span></a>
                                    <a class="theme_text_color1 " data-action="deletecomponent" data-component ="subject"  data-id="{{subjectid}}" data-name ="{{name}}"  data-code ="{{code}}"  title="{{#str}}delete,local_goals{{/str}}">
                                    <span class="deleteicon text-white"><i class="fa fa-trash-o" aria-hidden="true"></i></span></a>
                                </div>
                            </div>   
                        </div>
                    {{/subjects}}
                </div>
                {{/classess}}
                </div>
            </div>
        {{/boards}}
        </div>
    </div>
{{/goals}}
{{/records}}
{{/response}}
