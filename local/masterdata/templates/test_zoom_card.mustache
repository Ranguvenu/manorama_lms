<div class="zoom_card">
	<div class="calendar_event liveclass">
        <div class="header_section">
            <div class="liveclassimg">
                <img src="{{config.wwwroot}}/mod/zoom/pix/video.png" class="plus">
            </div>
            <div class="header_content">
                <h5><span>Live Class</span> : <span>{{title}}</span>
                {{#hassubtopic}}
                    <small style="display: block;font-size: 12px;margin-top: 5px;margin-left: 2px;font-style: italic;">{{subtopic}} </small>
                {{/hassubtopic}}
                </h5>
                <i>{{{summary}}}</i>
            </div>
        </div>
        <div class="row calendar_event_content">

            <div class="col-md-4 date_time_content">
                <div class="text-muted mb-2">{{#userdate}} {{timestart}}, {{#str}} strftimedaydatetime, block_notification {{/str}} {{/userdate}}</div>
                <div class="text-muted mb-2">{{#userdate}} {{timestart}}, {{#str}} strftimetime12, core_langconfig {{/str}} {{/userdate}} - {{#userdate}} {{timeend}}, {{#str}} strftimetime12, core_langconfig {{/str}} {{/userdate}}</div>
            </div>