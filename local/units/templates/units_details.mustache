{{#response}}
{{#records}}
{{#units}}
    <div class="unit_content mb-3">
        <div class="unit_header d-flex align-items-center justify-content-between py-3">
            <div>
               <span class="hierarchypath">{{hierarchypath}}</span>
                <h5 data-toggle="collapse" href="#unit-{{unitid}}">{{name}}</h5>
                <span class="unitstring">{{# str}}unit, local_units{{/ str}}</span></div>
            <div class="d-flex action_btns">
                <a class="theme_text_color1 mr-3" data-action="createchapter" data-unitname="{{name}}" data-unitid={{unitid}}>{{# str}}add_chapter, local_units{{/ str}}</a>
               {{#editacap}}
                <a class="theme_text_color1 mr-1" data-action="createunit" data-id={{unitid}} title="{{#str}} edit, local_units {{/str}}">
                <span class="editicon text-white"><i class="fa fa-pencil fa-fw"></i></span></a>
                {{/editacap}}
              {{#deleteacap}}
               {{#unitsdeletehide}}
                <a class="theme_text_color1 " data-action="deletecomponent" data-id={{unitid}} data-component ="unit"  data-name ="{{name}}"  data-code ="{{code}}"   title="{{#str}}delete,local_units{{/str}}">
                <span class="deleteicon text-white"><i class="fa fa-trash-o" aria-hidden="true"></i></span></a>
               {{/unitsdeletehide}}
              {{/deleteacap}}
            </div>
            
        </div>
        <div class="collapse" id="unit-{{unitid}}">
        {{#chapters}}
            <div class="unit_detail_content">
                <div class="unit_chapter d-flex align-items-center justify-content-between py-3">
                    <div><h6 data-toggle="collapse" href="#chapter-{{chapterid}}">{{name}}</h6>
                        <span class="heading">{{# str}}chapter, local_units{{/ str}}</span></div> 
                    <div class="d-flex action_btns">

                        <a class="theme_text_color1 mr-3" data-action="createtopic" data-chaptername="{{name}}" data-chapterid={{chapterid}} data-unitid={{unitid}}>{{# str}}add_topic, local_units{{/ str}}</a>
                        {{#editacap}}
                        <a class="theme_text_color1 mr-1" data-action="createchapter" data-id={{chapterid}} title="{{#str}} edit, local_units {{/str}}">
                        <span class="editicon text-white"><i class="fa fa-pencil fa-fw"></i></span></a>
                        {{/editacap}}
                        {{#deleteacap}}
                        {{#chaptersdeletehide}}
                        <a class="theme_text_color1 " data-action="deletecomponent" data-id={{chapterid}} data-component ="chapter"  data-name ="{{name}}"  data-code ="{{code}}"   title="{{#str}}delete,local_units{{/str}}">
                        <span class="deleteicon text-white"><i class="fa fa-trash-o" aria-hidden="true"></i></span></a>
                        {{/chaptersdeletehide}}
                     {{/deleteacap}}   
                    </div>
                </div>
                <div class="collapse" id="chapter-{{chapterid}}">
                {{#topics}}
                    <div class="unit_topic_content">
                        <div class="unit_topic d-flex align-items-center justify-content-between py-3">
                            <div><h6 data-toggle="collapse" href="#topic-{{topicid}}">{{name}}</h6>
                                <span class="heading">{{# str}}topic, local_units{{/ str}}</span></div> 
                            <div class="d-flex action_btns">
                             <a class="theme_text_color1 mr-3" data-action="createconcept" data-topicname="{{name}}" data-topicid={{topicid}} data-chapterid={{chapterid}} data-unitid={{unitid}}>{{# str}}add_concept, local_units{{/ str}}</a>
                               {{#editacap}}
                                <a class="theme_text_color1 mr-1" data-action="createtopic" data-id={{topicid}} title="{{#str}} edit, local_units {{/str}}">
                                <span class="editicon text-white"><i class="fa fa-pencil fa-fw"></i></span></a>
                                 {{/editacap}}
                                {{#deleteacap}}
                                 {{#topicsdeletehide}}
                                <a class="theme_text_color1 " data-action="deletecomponent" data-id={{topicid}} 
                                data-component ="topic"  data-name ="{{name}}"  data-code ="{{code}}"  title="{{#str}}delete,local_units{{/str}}">
                                <span class="deleteicon text-white"><i class="fa fa-trash-o" aria-hidden="true"></i></span></a>
                                 {{/topicsdeletehide}}
                                {{/deleteacap}}
                            </div>
                        </div>   
                    </div>
             
                 <div class="collapse" id="topic-{{topicid}}">
                {{#concepts}}
                    <div class="unit_concept_content">
                        <div class="unit_concept d-flex align-items-center justify-content-between py-3">
                            <div><h6 data-toggle="collapse" href="#concept-{{conceptid}}">{{name}}</h6>
                                <span class="heading">Concept</span></div> 
                            <div class="d-flex action_btns">
                               {{#editacap}}
                                <a class="theme_text_color1 mr-1" data-action="createconcept" data-id={{conceptid}} title="{{#str}} edit, local_units {{/str}}">
                                <span class="editicon text-white"><i class="fa fa-pencil fa-fw"></i></span></a>
                                 {{/editacap}}
                                {{#deleteacap}}
                                <a class="theme_text_color1 " data-action="deletecomponent" data-id={{conceptid}} 
                                data-component ="concept"  data-name ="{{name}}"  data-code ="{{code}}"  title="{{#str}}delete,local_units{{/str}}">
                                <span class="deleteicon text-white"><i class="fa fa-trash-o" aria-hidden="true"></i></span></a>
                                {{/deleteacap}}
                            </div>
                        </div>   
                    </div>
                {{/concepts}}
                </div>
                   {{/topics}}
                </div>
            </div>
        {{/chapters}}
        </div>
    </div>
{{/units}}
{{/records}}
{{/response}}
